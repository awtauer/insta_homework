<div class="page-header">
  <h1>Photo #<%= @photo.id %></h1>
</div>

<dl class="dl-horizontal">
  <dt>Image url</dt>
  <dd><%= @photo.image_url %></dd>

  <dt>Caption</dt>
  <dd><img src="<%= @photo.caption %>" width="100"</dd>

  <dt>User</dt>
  <dd><%= @photo.user_id %></dd>

  
  <ul>
	 <% @photo.comments.each do |comment| %>
		<li>
      <h4><%= User.find(comment.user_id).email %></h4>
      <p><%= comment.content %></p>
    </li>
	<% end %>

  </ul>

  <dt>Comments</dt>

</dl>
